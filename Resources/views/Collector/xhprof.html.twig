{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        {# icon by Apostolos Paschalidis interactivemania #}
        <img width="16" height="28" alt="Time" src="data:image/png;base64,">
        <span>XHProf</span>
    {% endset %}
    {% if not collector.profiling %}
        {% set text %}
            {% spaceless %}
                <span>Not profiling</span>
            {% endspaceless %}
        {% endset %}
    {% endif %}
    {% set icon %}
        {% if collector.profiling %}
            <a href="{{ collector.xhprofurl }}">{{ icon }}</a>
        {% else %}
            <span>{{ icon }}</span>
        {% endif %}
    {% endset %}
    <div class="sf-toolbar-block">
        <div class="sf-toolbar-icon">{{ icon|default('') }}</div>
        <div class="sf-toolbar-info">{{ text|default('') }}</div>
    </div>
{% endblock %}

