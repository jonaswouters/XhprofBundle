<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="xhprof_listener" class="Jns\Bundle\XhprofBundle\RequestListener">
            <tag name="kernel.event_listener" event="kernel.response" method="onCoreResponse" priority="-10000" />
            <tag name="kernel.event_listener" event="kernel.request" method="onCoreRequest" priority="10000" />
            <argument type="service" id="xhprof.aggregate_collector" />
            <argument type="service" id="service_container" />
        </service>

        <service id="jns_xhprof.console.listener" class="Jns\Bundle\XhprofBundle\CommandListener">
            <tag name="kernel.event_listener" event="console.command" method="onCommand" priority="-10000" />
            <tag name="kernel.event_listener" event="console.terminate" method="onTerminate" priority="10000" />
            <argument type="service" id="xhprof.aggregate_collector" />
            <argument type="service" id="service_container" />
            <call method="setEnabled">
                <argument>%jns_xhprof.command%</argument>
            </call>
            <call method="setOptionName">
                <argument>%jns_xhprof.command_option_name%</argument>
            </call>
            <call method="setFilters">
                <argument>%jns_xhprof.command_exclude_patterns%</argument>
            </call>
            <call method="setWebLocation">
                <argument>%jns_xhprof.location_web%</argument>
            </call>
        </service>

        <service id="xhprof.aggregate_collector" class="Jns\Bundle\XhprofBundle\DataCollector\AggregateCollector" />

        <service id="data_collector.xhprof" class="Jns\Bundle\XhprofBundle\DataCollector\XhprofCollector">
            <tag name="xhprof_data_collector" />
            <argument type="service" id="service_container" />
            <argument type="service" id="logger" on-invalid="null" />
            <argument type="service" id="doctrine" on-invalid="null" />
            <argument key="enabled">%jns_xhprof.enabled%</argument>
        </service>

        <service id="data_collector.xhprofio" class="Jns\Bundle\XhprofBundle\DataCollector\XhprofioCollector">
            <tag name="xhprof_data_collector" />
            <argument type="service" id="service_container" />
            <argument type="service" id="logger" on-invalid="null" />
            <argument type="service" id="doctrine" on-invalid="null" />
            <argument key="enabled">%jns_xhprof.xhprofio.enabled%</argument>
        </service>

        <service id="data_collector.xhgui" class="Jns\Bundle\XhprofBundle\DataCollector\XhguiCollector">
            <tag name="xhprof_data_collector" />
            <argument type="service" id="service_container" />
            <argument type="service" id="logger" on-invalid="null" />
            <argument type="service" id="doctrine" on-invalid="null" />
            <argument key="enabled">%jns_xhprof.xhgui.enabled%</argument>
            <argument key="url">%jns_xhprof.location_web%</argument>
        </service>
    </services>
</container>
